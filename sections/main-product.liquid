{%- comment -%}
  Main Product Section
  Location: sections/main-product.liquid
  Purpose: Full product page with images, variants, and add to cart
  This is a section file - it can be added/removed/reordered in the theme editor
{%- endcomment -%}

<div class="product section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="product__media-wrapper grid grid--1-col grid--2-col-tablet">
      <div class="product__media">
        {%- if product.selected_or_first_available_variant.featured_media != null -%}
          <img
            srcset="{%- if product.selected_or_first_available_variant.featured_media.width >= 165 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if product.selected_or_first_available_variant.featured_media.width >= 360 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if product.selected_or_first_available_variant.featured_media.width >= 533 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if product.selected_or_first_available_variant.featured_media.width >= 720 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if product.selected_or_first_available_variant.featured_media.width >= 940 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if product.selected_or_first_available_variant.featured_media.width >= 1066 -%}{{ product.selected_or_first_available_variant.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ product.selected_or_first_available_variant.featured_media | image_url }} {{ product.selected_or_first_available_variant.featured_media.width }}w"
            src="{{ product.selected_or_first_available_variant.featured_media | image_url: width: 533 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 30px) / 2)"
            alt="{{ product.selected_or_first_available_variant.featured_media.alt | escape }}"
            class="product__media-item"
            width="{{ product.selected_or_first_available_variant.featured_media.width }}"
            height="{{ product.selected_or_first_available_variant.featured_media.height }}"
            loading="eager"
          >
        {%- endif -%}
      </div>

      <div class="product__info-wrapper">
        <h1 class="product__title">
          {{ product.title | escape }}
        </h1>

        <div class="product__price">
          {%- render 'price', product: product, use_variant: true, show_badges: true -%}
        </div>

        <div class="product__description rte">
          {{ product.description }}
        </div>

        {%- unless product.has_only_default_variant -%}
          <variant-selects class="no-js-hidden" data-section="{{ section.id }}">
            {%- for option in product.options_with_values -%}
              <div class="product-form__input product-form__input--dropdown">
                <label class="form__label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
                  {{ option.name }}
                </label>
                <div class="select">
                  <select id="Option-{{ section.id }}-{{ forloop.index0 }}" class="select__select" name="options[{{ option.name | escape }}]" form="product-form-{{ section.id }}">
                    {%- for value in option.values -%}
                      <option value="{{ value | escape }}" {% if option.selected_value == value %}selected="selected"{% endif %}>
                        {{ value }}
                      </option>
                    {%- endfor -%}
                  </select>
                </div>
              </div>
            {%- endfor -%}
            <script type="application/json">
              {{ product.variants | json }}
            </script>
          </variant-selects>
        {%- endunless -%}

        <product-form class="product-form">
          {%- form 'product', product, id: 'product-form-' | append: section.id, novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
            <div class="product-form__buttons">
              <button
                type="submit"
                name="add"
                class="product-form__submit button button--full-width button--primary"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    {{ 'products.product.add_to_cart' | t }}
                  {%- else -%}
                    {{ 'products.product.sold_out' | t }}
                  {%- endif -%}
                </span>
              </button>
            </div>
          {%- endform -%}
        </product-form>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Product"
    }
  ]
}
{% endschema %}

